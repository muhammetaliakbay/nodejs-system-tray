{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "importHelpers": true,
    "target": "ES2019",
    "lib": [
      "ES2019"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
